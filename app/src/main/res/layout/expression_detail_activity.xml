<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <ScrollView
        android:layout_below="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?attr/backgroundColor"
                android:id="@+id/cardViewID"
                app:cardCornerRadius="6dp"
                android:layout_centerHorizontal="true"
                app:cardElevation="10dp">

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_below="@+id/cardViewID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColor"
                android:text="Definici贸n"
                android:layout_marginTop="10dp"
                android:id="@+id/definicion"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_below="@+id/definicion"
                android:id="@+id/tv_description"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:textColor="?attr/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_description"
                android:id="@+id/tv_description2"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:textColor="?attr/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_description3"
                android:layout_below="@+id/tv_description2"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin贸nimos"
                android:layout_below="@+id/tv_description3"
                android:textColor="?attr/textColor"
                android:textStyle="normal|bold"
                android:id="@+id/tv_sinonimo"/>

            <TextView
                android:text="No Hay Sinonimos."
                android:id="@+id/tv_sinonimos"
                android:layout_below="@+id/tv_sinonimo"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:layout_width="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ant贸nimos"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_sinonimos"
                android:textColor="?attr/textColor"
                android:textStyle="normal|bold"
                android:id="@+id/tv_antonimo"/>

            <TextView
                android:id="@+id/tv_antonimos"
                android:layout_below="@+id/tv_antonimo"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:textColor="?attr/textColor"
                android:textSize="16sp"
                android:text="No hay ant贸nimos."
                android:layout_width="match_parent"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
